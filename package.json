{
  "name": "my-razzle-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "test:coverage": "yarn test --coverage && open coverage/lcov-report/index.html",
    "start:prod": "NODE_ENV=production node build/server.js",
    "lint": "eslint src --max-warnings 0; tsc",
    "prettier": "prettier --write './src/**/*.{js,ts,tsx}'"
  },
  "dependencies": {
    "@types/react-dom": "^16.8.5",
    "baseui": "^8.15.2",
    "express": "^4.17.1",
    "razzle": "^3.0.0",
    "razzle-plugin-typescript": "^3.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "styletron-engine-atomic": "^1.4.0",
    "styletron-react": "^5.2.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.6.9",
    "@types/react": "^16.8.24",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.4",
    "@types/styletron-engine-atomic": "^1.1.0",
    "@types/styletron-react": "^5.0.1",
    "@types/superagent": "^4.1.3",
    "@types/supertest": "^2.0.8",
    "@types/webpack": "^4.32.1",
    "@types/webpack-env": "^1.14.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "^24.8.0",
    "babel-preset-react-app": "^9.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "isolatedModules": "true"
      }
    },
    "setupFiles": [
      "./src/setup-tests.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest",
      "^.+\\.jsx?$": "babel-jest",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/*.{ts,tsx}",
      "src/**/*.{ts,tsx}",
      "src/**/**/*.{ts,tsx}",
      "!src/server.tsx",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70
      }
    }
  }
}
