{
  "name": "my-razzle-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "test:coverage": "yarn test --coverage && open coverage/lcov-report/index.html",
    "start:prod": "NODE_ENV=production node build/server.js",
    "lint": "eslint './src/**/*.{js,ts,tsx}' --max-warnings 0",
    "prettier": "prettier --write './src/**/*.{js,ts,tsx}'"
  },
  "dependencies": {
    "@emotion/core": "^10.0.16",
    "@emotion/styled": "^10.0.15",
    "@types/react-dom": "^16.8.5",
    "emotion": "^10.0.14",
    "emotion-normalize": "^10.1.0",
    "emotion-server": "^10.0.14",
    "express": "^4.17.1",
    "hex-rgb": "^4.1.0",
    "razzle": "^3.0.0",
    "razzle-plugin-typescript": "^3.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-tippy": "^1.2.3",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.8",
    "styletron-engine-atomic": "^1.4.0",
    "styletron-react": "^5.2.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@testing-library/react": "^9.1.3",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/react": "^16.9.2",
    "@types/react-redux": "^7.1.2",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.4",
    "@types/redux": "^3.6.0",
    "@types/styletron-engine-atomic": "^1.1.0",
    "@types/styletron-react": "^5.0.1",
    "@types/superagent": "^4.1.3",
    "@types/supertest": "^2.0.8",
    "@types/webpack": "^4.32.2",
    "@types/webpack-env": "^1.14.0",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-emotion": "^10.0.16",
    "babel-plugin-jsx-remove-data-test-id": "^2.0.0",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-emotion": "^10.0.14",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^3.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "isolatedModules": "true"
      }
    },
    "setupFiles": [
      "./src/setup-tests.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest",
      "^.+\\.jsx?$": "babel-jest",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/*.{ts,tsx}",
      "src/**/*.{ts,tsx}",
      "src/**/**/*.{ts,tsx}",
      "!src/server.tsx",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70
      }
    }
  }
}
