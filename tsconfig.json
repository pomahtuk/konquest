{
  "types": ["node"],
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "build/dist",
    "module": "esnext",
    "resolveJsonModule": true,
    "target": "esnext",
    "lib": ["es2017", "es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "dist", "coverage", ".scripts", ".jest", "jest.config.js"]
}
